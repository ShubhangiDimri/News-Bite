<!-- ðŸ”’ Admin Access Floating Trigger -->
<button id="adminTrigger" title="Admin Access" aria-label="Admin Login">
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
  </svg>
</button>

<!-- ðŸ”’ Admin Login Modal -->
<div id="adminModal" role="dialog" aria-modal="true" aria-label="Admin Login">
  <div class="admin-card">
    <button class="admin-close-btn" id="adminClose" aria-label="Close">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="admin-header">
      <div class="admin-badge">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
      </div>
      <div class="admin-title">Admin Portal</div>
      <div class="admin-subtitle">Restricted Access</div>
    </div>

    <div class="admin-error" id="adminError" style="display: none; background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.35); color: #f87171; padding: 0.6rem 0.85rem; border-radius: 0.6rem; font-size: 0.85rem; margin-bottom: 1rem;"></div>

    <form id="adminLoginForm" class="admin-form">
      <div class="form-group" style="margin-bottom: 1rem">
        <label for="adminUsername" class="form-label" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Username</label>
        <input type="text" id="adminUsername" name="username" class="form-input" autocomplete="username" required />
      </div>
      <div class="form-group" style="margin-bottom: 0.5rem">
        <label for="adminPassword" class="form-label" style="display: block; margin-bottom: 0.5rem; font-size: 0.875rem; color: var(--text-muted);">Password</label>
        <div style="position: relative">
          <input type="password" id="adminPassword" name="password" class="form-input" style="padding-right: 3rem" autocomplete="current-password" required />
          <button type="button" id="toggleAdminPassword" style="position: absolute; right: 0.75rem; top: 50%; transform: translateY(-50%); background: none; border: none; color: var(--text-muted); cursor: pointer; padding: 0.25rem;">
            <svg width="17" height="17" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </button>
        </div>
      </div>

      <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1.5rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
        <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        Enter Admin Panel
      </button>
    </form>
  </div>
</div>

<style>
  /* Modal Specific Styles if not in style.css */
  #adminModal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }
  #adminModal.open {
    opacity: 1;
    pointer-events: all;
  }
  .admin-card {
    background: var(--background-color);
    border: 1px solid var(--glass-border);
    border-radius: 1.5rem;
    padding: 2.5rem;
    width: 100%;
    max-width: 400px;
    box-shadow: var(--shadow-glass);
    position: relative;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }
  #adminModal.open .admin-card {
    transform: translateY(0);
  }
  .admin-close-btn {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
  }
  .admin-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  .admin-badge {
    width: 4rem;
    height: 4rem;
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: #f59e0b;
  }
  .admin-title {
    font-size: 1.5rem;
    font-weight: 700;
  }
  .admin-subtitle {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #f59e0b;
    margin-top: 0.25rem;
  }
</style>

<script>
  (function() {
    const adminModal = document.getElementById("adminModal");
    const adminTrigger = document.getElementById("adminTrigger");
    const adminClose = document.getElementById("adminClose");
    const adminLoginForm = document.getElementById("adminLoginForm");
    const adminErrorDiv = document.getElementById("adminError");
    const toggleAdminPwd = document.getElementById("toggleAdminPassword");
    const adminPwdInput = document.getElementById("adminPassword");

    if (!adminModal || !adminTrigger) return;

    adminTrigger.addEventListener("click", () => {
      adminModal.classList.add("open");
      document.getElementById("adminUsername").focus();
    });

    const close = () => {
      adminModal.classList.remove("open");
      adminErrorDiv.style.display = "none";
      adminLoginForm.reset();
    };

    adminClose.addEventListener("click", close);
    adminModal.addEventListener("click", (e) => { if (e.target === adminModal) close(); });
    document.addEventListener("keydown", (e) => { if (e.key === "Escape") close(); });

    toggleAdminPwd.addEventListener("click", () => {
      const isHidden = adminPwdInput.type === "password";
      adminPwdInput.type = isHidden ? "text" : "password";
      toggleAdminPwd.innerHTML = isHidden
        ? `<svg width="17" height="17" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"></path><path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 11 8 11 8a13.16 13.16 0 0 1-1.67 2.68"></path><path d="M6.61 6.61A13.526 13.526 0 0 0 1 12s4 8 11 8a9.74 9.74 0 0 0 5-1.26"></path><line x1="2" y1="2" x2="22" y2="22"></line></svg>`
        : `<svg width="17" height="17" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>`;
    });

    adminLoginForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      adminErrorDiv.style.display = "none";
      const data = Object.fromEntries(new FormData(e.target).entries());
      try {
        const res = await fetch("/api/auth/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ...data, role: 'admin' }),
        });
        const result = await res.json();
        if (res.ok && result.role === "admin") {
          window.location.href = "/admin";
        } else {
          adminErrorDiv.textContent = result.message || "Access Denied: Not an admin.";
          adminErrorDiv.style.display = "block";
        }
      } catch (err) {
        adminErrorDiv.textContent = "Network error.";
        adminErrorDiv.style.display = "block";
      }
    });
  })();
</script>
