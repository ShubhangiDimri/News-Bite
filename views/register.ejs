<%- include('partials/header') %>

<style>
  body {
    overflow: hidden;
    height: 100vh;
  }
  .error-message {
    color: #ef4444;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    display: none;
  }
  .error-message.show {
    display: block;
  }
  .form-input.error {
    border-color: #ef4444;
  }
</style>

<div
  style="
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    overflow: hidden;
  "
>
  <div class="logo" style="justify-content: center; font-size: 2.5rem; margin-bottom: 2rem;">
    <svg class="logo-icon" style="width: 1.2em; height: 1.2em;"><use href="#logo-lightning"></use></svg>
    <span class="logo-text">NewsBite</span>
  </div>

  <div class="auth-card" style="max-width: 420px; width: 100%; padding: 2.5rem; border-radius: 1.5rem;">
    <h1 class="auth-title" style="margin-bottom: 2rem; font-size: 2rem; text-align: center;">
      Create Account
    </h1>
    <form id="registerForm">
      <div class="form-group" style="margin-bottom: 1.5rem">
        <label for="username" class="form-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-input"
          required
        />
        <div id="usernameError" style="color:#f87171; font-size:0.8rem; margin-top:0.3rem; display:none;"></div>
      </div>
      <div class="form-group" style="margin-bottom: 1.5rem">
        <label for="password" class="form-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Password</label>
        <div style="position: relative">
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            style="padding-right: 3rem"
            required
          />
          <button
            type="button"
            id="togglePassword"
            style="
              position: absolute;
              right: 0.75rem;
              top: 50%;
              transform: translateY(-50%);
              background: none;
              border: none;
              color: var(--text-muted);
              cursor: pointer;
              padding: 0.25rem;
              display: flex;
              align-items: center;
            "
          >
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </button>
        </div>
        <!-- Numbered password requirements (shown all at once) -->
        <div id="passwordChecklist" style="display:none; margin-top:0.4rem; font-size:0.8rem; line-height:1.8;">
          <div id="p-req-1" style="color:#9ca3af;">1. At least 8 characters</div>
          <div id="p-req-2" style="color:#9ca3af;">2. At least one number (0–9)</div>
          <div id="p-req-3" style="color:#9ca3af;">3. At least one special character (!@#$%^&*)</div>
        </div>
      </div>
      <!-- Inline server error banner -->
      <div id="serverError" style="display:none; background:rgba(239,68,68,0.12); border:1px solid rgba(239,68,68,0.4); color:#f87171; padding:0.65rem 0.85rem; border-radius:8px; font-size:0.875rem; margin-bottom:0.75rem;"></div>
      <button
        type="submit"
        id="submitBtn"
        class="btn btn-primary"
        style="width: 100%; padding: 0.85rem; font-size: 1rem; font-weight: 600; margin-top: 1rem"
      >
        Sign Up
      </button>
    </form>
    <div class="auth-footer" style="margin-top: 2rem; text-align: center; color: var(--text-muted);">
      Already have an account? <a href="/login" style="color: var(--primary-color); font-weight: 600; text-decoration: none;">Login</a>
    </div>
  </div>
</div>

<%- include('partials/adminLogin') %>


<script>
  const togglePassword  = document.getElementById("togglePassword");
  const passwordInput   = document.getElementById("password");
  const usernameInput   = document.getElementById("username");
  const usernameErrorDiv = document.getElementById("usernameError");
  const serverErrorDiv   = document.getElementById("serverError");
  const UREGEX = /^[a-zA-Z0-9_.]+$/;
  const SREGEX = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/;

  // ── helpers ─────────────────────────────────────────────────────────────────
  function fieldError(input, errDiv, msg) {
    input.style.borderColor = msg ? "#f87171" : "";
    errDiv.textContent = msg || "";
    errDiv.style.display = msg ? "block" : "none";
  }
  function showServerError(msg) { serverErrorDiv.textContent = msg; serverErrorDiv.style.display = "block"; }
  function clearServerError()   { serverErrorDiv.style.display = "none"; }

  // ── Password visibility toggle ──────────────────────────────────────────────
  togglePassword.addEventListener("click", () => {
    const type = passwordInput.type === "password" ? "text" : "password";
    passwordInput.type = type;
    togglePassword.innerHTML = type === "password"
      ? `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>`
      : `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"></path><path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 11 8 11 8a13.16 13.16 0 0 1-1.67 2.68"></path><path d="M6.61 6.61A13.526 13.526 0 0 0 1 12s4 8 11 8a9.74 9.74 0 0 0 5-1.26"></path><line x1="2" y1="2" x2="22" y2="22"></line></svg>`;
  });

  // ── Live username validation ─────────────────────────────────────────────────
  usernameInput.addEventListener("input", () => {
    const val = usernameInput.value.trim();
    if (!val) return fieldError(usernameInput, usernameErrorDiv, "");
    if (val.length < 3)       return fieldError(usernameInput, usernameErrorDiv, "At least 3 characters required");
    if (val.length > 30)      return fieldError(usernameInput, usernameErrorDiv, "Maximum 30 characters");
    if (!UREGEX.test(val))    return fieldError(usernameInput, usernameErrorDiv, "Only letters, numbers, _ or . allowed");
    fieldError(usernameInput, usernameErrorDiv, "");
  });

  // ── Live password validation (all rules shown at once) ──────────────────────
  passwordInput.addEventListener("input", () => {
    const val = passwordInput.value;
    const checklist = document.getElementById("passwordChecklist");
    const r1 = document.getElementById("p-req-1");
    const r2 = document.getElementById("p-req-2");
    const r3 = document.getElementById("p-req-3");

    if (!val) {
      checklist.style.display = "none";
      passwordInput.style.borderColor = "";
      return;
    }

    const okLen     = val.length >= 8;
    const okNum     = /\d/.test(val);
    const okSpecial = SREGEX.test(val);
    const allOk     = okLen && okNum && okSpecial;

    if (allOk) {
      // All done — hide checklist and clear border, just like username
      checklist.style.display = "none";
      passwordInput.style.borderColor = "";
      return;
    }

    // Show checklist with red/green per rule
    checklist.style.display = "block";
    r1.style.color = okLen     ? "#4ade80" : "#f87171";
    r2.style.color = okNum     ? "#4ade80" : "#f87171";
    r3.style.color = okSpecial ? "#4ade80" : "#f87171";
    r1.textContent = `1. At least 8 characters`;
    r2.textContent = `2. At least one number (0–9)`;
    r3.textContent = `3. At least one special character (!@#$%^&*)`;
    passwordInput.style.borderColor = "#f87171";
  });

  // ── Form submission ─────────────────────────────────────────────────────────
  document.getElementById("registerForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    clearServerError();

    const username = usernameInput.value.trim();
    const password = passwordInput.value;
    const submitBtn = document.getElementById("submitBtn");

    // Validate username
    if (!username || username.length < 3 || username.length > 30 || !UREGEX.test(username)) {
      fieldError(usernameInput, usernameErrorDiv, "Username must be 3–30 characters: letters, numbers, _ or .");
      return;
    }
    fieldError(usernameInput, usernameErrorDiv, "");

    // Validate password — show checklist with red items
    const okLen     = password.length >= 8;
    const okNum     = /\d/.test(password);
    const okSpecial = SREGEX.test(password);
    if (!okLen || !okNum || !okSpecial) {
      // Trigger the live checklist to appear and highlight missing items
      passwordInput.dispatchEvent(new Event("input"));
      passwordInput.focus();
      return;
    }
    passwordInput.style.borderColor = "";

    // Submit
    submitBtn.disabled = true;
    submitBtn.textContent = "Creating account…";

    try {
      const res = await fetch("/api/auth/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ username, password, role: 'user' }),
      });

      const result = await res.json();

      if (res.ok) {
        // Redirect to login with success message
        window.location.href = "/login?registered=1";
      } else {
        showServerError(result.message || "Registration failed. Please try again.");
        submitBtn.disabled = false;
        submitBtn.textContent = "Sign Up";
      }
    } catch (err) {
      console.error(err);
      showServerError("Network error. Please check your connection and try again.");
      submitBtn.disabled = false;
      submitBtn.textContent = "Sign Up";
    }
  });
</script>

<%- include('partials/footer') %>

