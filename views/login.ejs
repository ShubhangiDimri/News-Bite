<%- include('partials/header') %>

<style>
  body {
    overflow: hidden;
    height: 100vh;
  }

</style>

<!-- ── Main user login ── -->
<div
  style="
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    overflow: hidden;
  "
>
  <div class="logo" style="justify-content: center; font-size: 2.5rem; margin-bottom: 2rem;">
    <svg class="logo-icon" style="width: 1.2em; height: 1.2em;"><use href="#logo-lightning"></use></svg>
    <span class="logo-text">NewsBite</span>
  </div>

  <div class="auth-card" style="max-width: 420px; width: 100%; padding: 2.5rem; border-radius: 1.5rem;">
    <h1 class="auth-title" style="margin-bottom: 2rem; font-size: 2rem; text-align: center;">
      Welcome Back
    </h1>
    
    <!-- Registration success banner -->
    <div id="successBanner" style="display:none; background:rgba(74,222,128,0.12); border:1px solid rgba(74,222,128,0.4); color:#4ade80; padding:0.65rem 0.85rem; border-radius:8px; font-size:0.875rem; margin-bottom:1rem;">
      ✓ Account created successfully! Please log in.
    </div>

    <!-- Inline error banner -->
    <div id="loginError" style="display:none; background:rgba(239,68,68,0.12); border:1px solid rgba(239,68,68,0.4); color:#f87171; padding:0.65rem 0.85rem; border-radius:8px; font-size:0.875rem; margin-bottom:1rem;"></div>

    <form id="loginForm">
      <div class="form-group" style="margin-bottom: 1.5rem">
        <label for="username" class="form-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-input"
          required
        />
      </div>
      <div class="form-group" style="margin-bottom: 1.5rem">
        <label for="password" class="form-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Password</label>
        <div style="position: relative">
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            style="padding-right: 3rem"
            required
          />
          <button
            type="button"
            id="togglePassword"
            style="
              position: absolute;
              right: 0.75rem;
              top: 50%;
              transform: translateY(-50%);
              background: none;
              border: none;
              color: var(--text-muted);
              cursor: pointer;
              padding: 0.25rem;
              display: flex;
              align-items: center;
            "
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </button>
        </div>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%; padding: 0.85rem; font-size: 1rem; font-weight: 600;">
        Login
      </button>
    </form>
    <div class="auth-footer" style="margin-top: 2rem; text-align: center; color: var(--text-muted);">
      Don't have an account? <a href="/register" style="color: var(--primary-color); font-weight: 600; text-decoration: none;">Sign up</a>
    </div>
  </div>
</div>

<%- include('partials/adminLogin') %>

<script>
  /* ── User login ── */
  const loginForm     = document.getElementById("loginForm");
  const loginErrorDiv = document.getElementById("loginError");
  const successBanner = document.getElementById("successBanner");

  if (new URLSearchParams(window.location.search).get("registered") === "1") {
    successBanner.style.display = "block";
  }

  function showLoginError(msg) {
    loginErrorDiv.textContent = msg;
    loginErrorDiv.style.display = "block";
    successBanner.style.display = "none";
  }
  function clearLoginError() {
    loginErrorDiv.style.display = "none";
  }

  /* Password visibility toggle (user) */
  const togglePassword = document.getElementById("togglePassword");
  const passwordInput  = document.getElementById("password");
  togglePassword.addEventListener("click", () => {
    const isHidden = passwordInput.type === "password";
    passwordInput.type = isHidden ? "text" : "password";
    togglePassword.innerHTML = isHidden
      ? `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"></path><path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 11 8 11 8a13.16 13.16 0 0 1-1.67 2.68"></path><path d="M6.61 6.61A13.526 13.526 0 0 0 1 12s4 8 11 8a9.74 9.74 0 0 0 5-1.26"></path><line x1="2" y1="2" x2="22" y2="22"></line></svg>`
      : `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>`;
  });

  loginForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    clearLoginError();
    const data = Object.fromEntries(new FormData(e.target).entries());
    try {
      const res    = await fetch("/api/auth/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ ...data, role: 'user' }),
      });
      const result = await res.json();
      if (res.ok) {
        window.location.href = result.role === "admin" ? "/admin" : "/";
      } else {
        showLoginError(result.message || "Login failed. Please try again.");
      }
    } catch (err) {
      showLoginError("Network error. Please check your connection.");
    }
  });
</script>

<%- include('partials/footer') %>

